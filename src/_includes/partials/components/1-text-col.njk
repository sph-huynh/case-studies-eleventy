

<section id="1-col-text" class="spaced-container">
    <div class="col-wrapper">
        <div class="col-3quart">
            <div class="col-content centre-me-top">
                {% if pageSection.fullContent | length !== 0 %}
                    {{ pageSection.fullContent | safe }}
                {% elif fullContent | length !== 0 %}
                    {{ fullContent | safe }}
                {% endif %}
            </div>
        </div>
        <div class="col-item col-4 col-grey col-singular">
            {% if pageSection.colImage | length !== 0 %}
            <div class="col-top">
                <div class="col-content centre-me-top">
                    <img src="{% if pageSection.colImage | length == 0 %}{% elif pageSection.colImage | first !== '/' %}/{% endif %}{{ pageSection.colImage }}" class="icon-circle" />
                </div>
            </div>
            {% elif colImage | length !== 0 %}
                <div class="col-top">
                    <div class="col-content centre-me-top">
                        <img src="{% if colImage | length == 0 %}{% elif colImage | first !== '/' %}/{% endif %}{{ colImage }}" class="icon-circle" />
                    </div>
                </div>
            {% endif %}
            {% if pageSection.textColTitle | length !== 0 or textColTitle | length !== 0 %}
            <div class="col-mid">
                <div class="col-content">
                    {% if pageSection.textColTitle | length !== 0 %}
                        <h5>{{ pageSection.textColTitle }}</h5>
                    {% elif textColTitle | length !== 0 %}
                        <h5>{{ textColTitle }}</h5>
                    {% endif %}
                </div>
            </div>
            {% endif %}
            {% if pageSection.colContent | length !== 0 or colContent | length !== 0 %}
            <div class="col-bot">
                <div class="col-content">
                    {% if pageSection.colContent | length !== 0 %}
                        <p>{{ pageSection.colContent | safe }}</p>
                    {% elif colContent | length !== 0 %}
                        <p>{{ colContent | safe }}</p>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</section>
