{% block content %}
  <main id="main-content" tabindex="-1">
    <article class="[ post ] [ h-entry ]">
      <div class"special-page top">
        <div class="post-list__item wrapper">
            <h3 class="h3-post-title">
                {{ skills.title }}
            </h3>
            {% for skillset in skills.skillssection %}
            <div class="three-col">
                <p class="post-sub-text">
                        <h4>{{ skillset.skillsubtitle | safe }}</h4>
                        {{ skillset.skillslist | safe }}
                </p>
            </div>
            {% endfor %}
        </div>
      </div>
    </article>
  </main>
{% endblock %}

