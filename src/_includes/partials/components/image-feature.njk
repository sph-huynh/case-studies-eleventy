<div class="beforeImages left-2 inline-block align-top">
<h4>From this...</h4>
{% for image in beforeImages %}
    <img src="{% if image | first !== '/' %}/{% endif %}{{ image }}"></img>
{% endfor %}
</div>
<div class="afterImages right-1 inline-block align-top">
<h4>To this...</h4>
{% for image in afterImages %}
    <img src="{% if image | first !== '/' %}/{% endif %}{{ image }}"></img>
{% endfor %}
</div>