{% extends 'layouts/base.njk' %}
{% set pageType = 'Page' %}

{# Intro content #}
{% set introHeading = title %}

{% block content %}
  <main id="main-content" tabindex="-1">
    <article class="[ post ] [ h-entry ]">
      <div class"special-page top">
        <div class="post-list__item wrapper">
            <div class="post-list__item left-2 wrapped-item">
            <img src="/images/me.jpg" class"post-image" />
            </div>
            <div class="post-list__item right-1 wrapped-item">
            <p class="post-sub-title text-500 gap-top-300">Digital Experience Designer</p>
            <h3 class="h3-post-title">
                <a href="{{ item.url }}" class="link post-title" rel="bookmark">SOPHIA HUYNH</a>
