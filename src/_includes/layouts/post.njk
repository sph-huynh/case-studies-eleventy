{% extends 'layouts/base.njk' %}
{% set pageType = 'Post' %}

{# Intro content #}
{% set headerTitle = title %}
{% set headerDescription = date | dateFilter %}
{% set introSummary %}
  {{ content | safe }}
<p class="[ intro__meta ] [ text-500 leading-tight ]">
  {% if date %}
    <time datetime="{{ date | w3DateFilter }}" class="dt-published">{{ date | dateFilter }}</time>
  {% endif %}
  <span>â€” {{ helpers.getReadingTime(content) }} minute read</span>
</p>
{% endset %}

{% block content %}
  <main id="main-content" tabindex="-1">
      <section class="featurePage">
        {% include "partials/components/1-text-col.njk" %}
        {% for pageSection in plainRepeat %}
          {% if pageSection.template == 'plain-text' %}
            {% include "partials/components/plain.njk" %}            
          {% endif %}
          
          {% if pageSection.template == 'metrics' %}
            {% include "partials/components/metrics.njk" %}            
          {% endif %}

          {% if pageSection.template == 'comparison-gallery' %}
              {% include "partials/components/comparison-gallery.njk" %}
          {% endif %}

          {% if pageSection.template == 'image-gallery' %}
              {% include "partials/components/image-gallery.njk" %}        
          {% endif %}

          {% if pageSection.template == '1-text-col' %}
            {% include "partials/components/1-text-col.njk" %}        
          {% endif %}

          {% if pageSection.template == 'testimonial' %}
            {% include "partials/components/testimonial.njk" %}     
          {% endif %}

          {% if pageSection.template == 'full-bleed-image' %}
            {% include "partials/components/full-bleed-image.njk" %}     
          {% endif %}

        {% endfor %}

        {% include "partials/global/cta.njk" %}   
      </section>
  </main>
{% endblock %}
