{% extends 'layouts/base.njk' %}
{% set pageType = 'Post' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
<p class="[ intro__meta ] [ text-500 leading-tight ]">
  {% if date %}
    <time datetime="{{ date | w3DateFilter }}" class="dt-published">{{ date | dateFilter }}</time>
  {% endif %}
  <span>â€” {{ helpers.getReadingTime(content) }} minute read</span>
</p>
{% endset %}

{% block content %}
  <main id="main-content" tabindex="-1">
    <article class="[ post ] [ h-entry ]">
      <div class"special-page top">
            <div class="cs-box">
              <div class="cs-box-left">
                <div class="cs-box-left-top">
                  <h1 class="cs-title">{{ challenge }}</h1> 
                  <p class="cs-sub-title">OVERVIEW Interviewing customers, internal stakeholders and mapping out processes in order to redesign the voice authentication service at an Australian Telecoms company.</p>
                </div>
                <div class="cs-box-left-bottom">
                  {% if tags %}
                          <h4 class="font-base text-600 weight-mid">Skills and tools used:</h4>
                          <ul class="tags-list font-300w">
                            {% for item in tags %}
                              <li class="nav__item">
                                <a href="/tags/{{ item }}" class="link">{{ item }}</a>
                              </li>
                            {% endfor %}
                          </ul>
                  {% endif %}
                </div>
              </div>
              <div class="cs-box-right">
                <img src="/{{ featureimage }}" class="cs-image" />
              </div>
            </div>
            <div class="cs-box">
              <div class="cs-box-left">
                <div class="cs-box-left-top">
                  <h1 class="cs-title">Approach</h1> 
                  <p class="cs-sub-title">{{ maintag }}</p>
                  <p class="cs-sub-title">{{ title }}</p>
                  <p class="cs-sub-title">{{ whatstatement }}</p>
                </div>
              </div>
              <div class="cs-box-right">
                <div class="cs-box-metrics">
                  <h1 class="cs-metric-title">27%</h1> 
                  <h1 class="cs-metric-subtitle">increase</h1> 
                </div>
              </div>
            </div>            
      </div>            
    </article>
  </main>
{% endblock %}

{{ content | safe }}
